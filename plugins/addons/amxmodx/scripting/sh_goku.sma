public round_end()
{
	g_betweenRounds = true

	for (new id=1; id <= SH_MAXSLOTS; id++) {
		if ( g_hasGoku[id] ) {
			g_isSaiyanLevel[id] = 0
			shResetSpeed(id)
			if ( g_powerID[id] > 0 ) {
				remove_power(id, g_powerID[id])
			}
		}
	}
}
