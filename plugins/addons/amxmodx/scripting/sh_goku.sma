public newSpawn(id)
{
	g_inStun[id] = false

	if ( shModActive() && g_hasGoku[id]  && is_user_alive(id) ) {
		// Set armor in x seconds to avoid breaking max ap settings in other heroes
		set_task(0.5, "goku_setarmor", id)
		g_isSaiyanLevel[id] = 0
	}
}
